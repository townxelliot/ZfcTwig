{
    "name": "kokspflanze/zfc-twig",
    "description": "Zend Framework 2 Module that provides a Twig rendering strategy and extensions to render actions or trigger events from your templates",
    "type": "library",
    "keywords": [
        "twig",
        "module",
        "zf2"
    ],
    "homepage": "http://www.github.com/ZF-Commons/ZfcTwig/",
    "authors": [
        {
            "name": "Kyle Spraggs",
            "email": "theman@spiffyjr.me",
            "homepage": "http://www.spiffyjr.me/"
        },
        {
            "name": "Cosmin Harangus",
            "email": "cosmin@zendexperts.com",
            "homepage": "http://www.zendexperts.com/"
        }
    ],
    "require": {
        "php": ">=5.5",
        "twig/twig": "~1.13"
    },

    "autoload": {
        "psr-0": {
            "ZfcTwig\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "ZfcTwigTest\\": "tests/"
        }
    },
    "require-dev": {
        "zendframework/zend-navigation": "~2.7",
        "zendframework/zend-modulemanager": "~2.7",
        "zendframework/zend-mvc": "~2.7|~3.0",
        "zendframework/zend-mvc-plugin-flashmessenger": "~1.0",
        "zendframework/zend-servicemanager": "~2.7|~3.0",
        "zendframework/zend-view": "~2.7",
        "phpunit/phpunit": "~4.8|~5.0"
    }
}
